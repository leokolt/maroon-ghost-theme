{{!< default}}

    {{#post}}

        <main class="site-content">
            
            <article class="entry {{post_class}} entry--wide-image">

                <header class="entry__header">
                    <div class="entry__top entry-top content-width content-width--medium">

                        <div class="entry-top__tags">

                            {{#if featured}}

                                <div class="post-item__featured-mark">
                                    {{>"icons/flash"}}
                                </div>

                            {{/if}}

                            <div class="post-item__visibility visibility--{{visibility}}">
                                {{>"icons/lock"}}
                            </div>

                            {{#foreach tags}}

                                <a href="{{url}}" title="{{name}}" class="entry-top__tag global-tag tag-{{comment_id}} {{slug}}">{{name}}</a>
                            
                            {{/foreach}}

                        </div>
                                
                        <h1 class="entry__title">{{title}}</h1>

                        <div class="entry__meta global-meta">

                            {{#primary_author}}

                                <a href="{{url}}" class="entry__author-link">
                                    <img class="entry__author-image" src="{{img_url profile_image}}" alt="{{name}}" />
                                </a>

                                <div class="entry__meta-right">
                                    <a class="entry__author-name" href="{{url}}">{{name}}</h4></a>
                            
                            {{/primary_author}}
                        
                                    <span class="entry__date">{{date published_at timeago="true"}}</span>
                                    <span class="entry__reading-time"> • {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
                                </div> 

                        </div>
                    </div>

                    {{#if feature_image}}

                        <div class="entry__image">

                            <figure>
                                {{!-- this "srcset" allows you to apply responsive images so that they are better displayed on different screens --}}
                                <img src="{{img_url feature_image}}" srcset="{{>"srcset"}}"
                                    sizes="(max-width: 1000px) 400px,
                                        (max-width: 1170px) 1170px, 2000px" 
                                    src="{{img_url feature_image size=" m"}}" 
                                    alt="{{title}}"
                                    class="entry__image--full" />
                            </figure>

                        </div>

                    {{/if}}

                </header>

                <section class="entry__content content-width content-width--small">

                    {{content}}

                    <footer class="entry__footer entry-footer">

                        {{!-- partials/share-post.hbs --}}
                        {{> "share-post"}}

                        {{!< default}}

    {{#post}}

    <main class="site-content">
        
        <article class="entry {{post_class}}">

            <header class="entry__header">

                {{#if feature_image}}

                    <div class="entry__image">

                            <figure>
                                {{!-- this "srcset" allows you to apply responsive images so that they are better displayed on different screens --}}
                                <img src="{{img_url feature_image}}" srcset="{{>"srcset"}}"
                                    sizes="(max-width: 1000px) 400px,(max-width: 1170px) 1170px, 2000px" 
                                    src="{{img_url feature_image size=" m"}}" 
                                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                    class="entry__image--full" />
                                {{#if feature_image_caption}}
                                    <figcaption>{{feature_image_caption}}</figcaption>
                                {{/if}}
                            </figure>

                    </div>

                {{/if}}

                <div class="entry__top entry-top content-width content-width--medium">

                        <div class="entry-top__tags">

                            {{#if featured}}

                                <div class="post-item__featured-mark">
                                    {{>"icons/flash"}}
                                </div>

                            {{/if}}

                            <div class="post-item__visibility visibility--{{visibility}}">
                                {{>"icons/lock"}}
                            </div>

                            {{#foreach tags}}

                                <a href="{{url}}" title="{{name}}" class="entry-top__tag global-tag tag-{{comment_id}} {{slug}}">{{name}}</a>
                            
                            {{/foreach}}

                        </div>
                            
                    <h1 class="entry__title">{{title}}</h1>

                    <div class="entry__meta global-meta">
                        
                        {{#primary_author}}

                            <a href="{{url}}" class="entry__author-link">
                                <img class="entry__author-image" src="{{img_url profile_image}}" alt="{{name}}" />
                            </a>

                            <div class="entry__meta-right">
                                <a class="entry__author-name" href="{{url}}">{{name}}</h4></a>
                            
                        {{/primary_author}}
                    
                                <span class="entry__date">{{date published_at timeago="true"}}</span>
                                <span class="entry__reading-time"> • {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
                            </div> 

                    </div>
                </div>
            </header>

            <section class="entry__content content-width content-width--small">

                {{content}}

                <footer class="entry__footer entry-footer">

                    {{!-- partials/share-post.hbs --}}
                    {{> "share-post"}}

                    <div class="entry-footer__next-prev">
                        {{#prev_post}}
                            <div class="entry-footer__prev">
                                <a href="{{url}}">{{title}}</a>
                            </div>
                        {{/prev_post}}

                        {{#next_post}}
                            <div class="entry-footer__next"> 
                                <a href="{{url}}">{{title}}</a>
                            </div>
                        {{/next_post}} 
                    </div>

                </footer>
                
            </section>

        </article>

        {{!-- partials/related-posts.hbs --}}
        {{> "related-posts"}}

    </main>

    {{/post}}


    {{!-- scroll-to-top button & progress bar reading --}}
    <div class="progress">
        <button class="scroll-top">
            {{>"icons/scroll-top"}}
        </button>
    </div>

                    </footer>
                    
                </section>

            </article>

            {{!-- partials/related-posts.hbs --}}
            {{> "related-posts"}}

        </main>

    {{/post}}

