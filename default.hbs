<!doctype html>
<html lang="{{@site.locale}}">

    <head>
        <title>{{meta_title}}</title>
        <meta charset="utf-8">

        {{!-- mobile view --}}
        <meta name="HandheldFriendly" content="True" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {{!-- google fonts --}}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Satisfy&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700;900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,400;0,900;1,400;1,900&display=swap" rel="stylesheet">
      
        {{!-- styles --}}
        <link rel="stylesheet" type="text/css" href="{{asset 'css/screen.css'}}">

        {{!-- partials/settings.hbs for setup on the site --}}
        {{>"settings"}}

        {{!-- settings > code injection > header section --}}
        {{ghost_head}}

    </head>

    <body class="{{body_class}}">
        <div class="site-inner">
            <header class="site-header">
                <div class="site-header__inner content-width content-width--medium">
                    <div class="site-header__left header-left">
                        <div class="header-left__brand">

                            {{!-- settings > branding --}}
                            <a class="header-left__logo" href="{{@site.url}}">

                                {{#if @site.logo}}

                                <img src="{{@site.logo}}" alt="{{@site.title}}">

                                {{else}}

                                <h1 class="header-left__site-title">{{@site.title}}</h1>
                                
                                {{/if}}
                            </a>

                        </div>

                        <button class="header-left__burger" aria-label="menu"></button>

                        {{!--settings > navigation > primary --}}
                        <nav class="header-left__menu">
                            {{navigation}}
                        </nav>

                    </div>

                    <div class="site-header__right header-right">

                        <div class="header-right__nav-members nav-members">

                            {{!-- links on signin, signup pages for unmembers & account page for members --}}
                            {{#if @member}}
                                <div class="nav-members__menu">
                                    <a href="javascript:" class="nav-members__avatar" type="checkbox" name="menu">
                                        {{> "icons/avatar"}}
                                        {{#if @member.avatar_image}}
                                            <img src="{{@member.avatar_image}}" />
                                        {{/if}}
                                    </a>
                                    <ul class="nav-members__dropdown">
                                        <li class="nav-members__info">
                                            <small>{{t "Signed in as"}}</small>
                                            <span class="nav-members__email" title="{{@member.email}}">{{@member.email}}</span>
                                        </li>
                                        <li class="nav-members__dropdown-item"><a href="{{@site.url}}/account/">{{t "Account"}}</a></li>
                                        <li class="nav-members__dropdown-item"><a href="#signout" data-members-signout>{{t "Log out"}}</a></li>
                                    </ul>
                                </div>
                            {{else}}
                                <a class="nav-members__signin-link" href="{{@site.url}}/signin/">{{t "Log in"}}</a>
                                <a class="nav-members__signup-link members-button" href="{{@site.url}}/signup/">{{t "Subscribe"}}</a>
                            {{/if}}
                        </div>

                        {{>"search"}}

                    </div>
                </div>
            </header>

            {{{body}}}

            {{> "subscribe-form"}}

            <footer class="site-footer">
                <div class="site-footer__inner content-width content-width--medium">

                    <div class="site-footer__brand">
                        <a class="site-footer__logo" href="{{@site.url}}">

                            {{#if @site.logo}}

                                <img src="{{@site.logo}}" alt="{{@site.title}}">

                            {{else}}

                                <div class="site-footer__site-title">{{@site.title}}</div>
                            
                            {{/if}}
                        </a>

                    </div>

                    <div class="site-footer__social-links">

                        {{>"social-links"}}

                    </div>

                    <div class="site-footer__bottom">

                        {{!--settings > navigation > secondary --}}
                        <nav class="site-footer__menu">
                            {{navigation type="secondary"}}
                        </nav>


                        <div class="site-footer__copyright">
                            {{@site.title}} Â© {{date format="YYYY"}}
                        </div>

                    </div>

                </div>
            </footer>

        </div>


        {{!-- include scripts js --}}
        <script src="{{asset 'js/global.js'}}"></script>

        {{#is "index, tag, author"}}
            <script src="{{asset 'js/index.js'}}"></script>
        {{/is}}

        {{#is "post"}}
            <script src="{{asset 'js/post.js'}}"></script>
        {{/is}}

        {{!-- settings > code injection > footer section --}}
        {{ghost_foot}}
        
    </body>

</html>