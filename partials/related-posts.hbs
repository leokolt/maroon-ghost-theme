{{!-- Related Posts --}}
{{#get "posts" include="tags" limit="6" filter="id:-{{id}}+tag:{{primary_tag.slug}}" as |related|}}

	{{#if related}}

		<section class="related-posts">

			{{#../primary_tag}}
				<h3 class="related-posts__title">{{t "Others from"}} {{name}}</h3>
			{{/../primary_tag}}

			<div class="related-posts__inner content-width content-width--medium">

				{{#foreach related}}
					<div class="related-posts__item related-item {{^if feature_image}}no-image{{/if}}">

						{{#if feature_image}}

							<div class="related-item__image">

								<a href="{{url}}" class="related-item__image-link"></a>

								<img class="related-item__image-picture" srcset="{{>"srcset"}}"
									 sizes="(max-width: 1000px) 400px, 800px"
									 src="{{img_url feature_image size="m"}}"
									 alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
									 loading="lazy" />

							</div>

						{{/if}}


						<a class="related-item__link" href="{{url}}">
							<h4 class="related-item__title">{{title}}</h4>
						</a>

						<div class="related-item__meta global-meta">
							<span class="related-item__date">{{date published_at timeago="true"}}</span>
							<span class="related-item__reading-time"> â€¢ {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
						</div>
					</div>
				{{/foreach}}
			</div>
		</section>

	{{/if}}

{{/get}}
