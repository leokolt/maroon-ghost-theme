{{^is "paged"}}

    {{#get "posts" filter="featured:true" limit="9" as |featured|}}

    <div class="post-slider js-scroll fade-in-bottom scrolled">

        <h3 class="post-slider__title">{{t "Our featured posts"}}</h3>

        <div class="post-slider__inner">

            {{#foreach featured}}
            
                <article class="post-slider__item slider-item {{post_class}}">

                    <div class="slider-item__inner">

                        {{#if feature_image}}

                            <div class="slider-item__image">

                                <a class="slider-item__image-link" href="{{url}}"></a>

                                <img class="slider-item__image-picture" srcset="{{>"srcset"}}"
                                        sizes="(max-width: 1000px) 400px, 800px"
                                        src="{{img_url feature_image size="m"}}"
                                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" 
                                        loading="lazy" />

                            </div>

                        {{/if}}

                        <div class="slider-item__header">
                                                    
                            <a class="slider-item__link" href="{{url}}">
                                <h2>{{title}}</h2>
                            </a>
                        
                            <div class="slider-item__meta global-meta">
                                <span class="slider-item__date">{{date published_at timeago="true"}}</span>
                                <span class="slider-item__reading-time"> â€¢ {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
                            </div>
                        </div>

                    </div>
                </article>
            
            {{/foreach}}

        </div>

        <button class="slider__button-prev">{{>"icons/shevron-left"}}</button>
        <button class="slider__button-next">{{>"icons/shevron-right"}}</button>

    </div>

    {{/get}}
    
{{/is}}