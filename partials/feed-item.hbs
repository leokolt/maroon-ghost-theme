
<article class="post-feed__item post-item js-scroll fade-in-bottom {{post_class}} {{#is "home"}}{{#has number="nth:3"}}post-item--large{{/has}}{{/is}}{{#is "paged"}}scrolled{{/is}}">

    <div class="post-item__inner">

        {{#if feature_image}}

            <div class="post-item__image">

                <a class="post-item__image-link" href="{{url}}"></a>

                {{!-- this "srcset" allows you to apply responsive images so that they are better displayed on different screens --}}
                <img class="post-item__image-picture"
                    srcset="{{>"srcset"}}"
                    sizes="(max-width: 1000px) 400px, 800px" 
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" 
                    loading="lazy" />

            </div>

        {{/if}}

        <div class="post-item__header">

            <div class="post-item__tags">

                {{#if featured}}

                    <div class="post-item__featured-mark">
                        {{>"icons/flash"}}
                    </div>

                {{/if}}

                <div class="post-item__visibility visibility--{{visibility}}">
                    {{>"icons/lock"}}
                </div>

                {{#if primary_tag}}

                    <a href="{{primary_tag.url}}" class="post-item__tag global-tag">{{primary_tag.name}}</a>
            
                {{/if}}

            </div>
        
            <a class="post-item__link" href="{{url}}">
                <h2>{{title}}</h2>
            </a>

            {{#is "home"}}

                {{#has number="nth:3"}}
            
                    <p class="post-item__excerpt post-excerpt">{{excerpt characters="170"}}</p>

                {{/has}}

            {{/is}}
        
            <div class="post-item__meta global-meta">

                {{#primary_author}}

                    <a class="post-item__author-name" href="{{url}}">{{name}}</a>

                {{/primary_author}}

                <span class="post-item__date"> • {{date published_at timeago="true"}}</span>
                <span class="post-item__reading-time"> • {{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
            </div>
        </div>

    </div>
</article>


