{
  "name": "maroon",
  "description": "a blog Ghost theme",
  "version": "0.0.1",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "license": "gpl-3.0",
  "author": {
    "name": "leokolt",
    "email": "leonidkoltan@gmail.com",
    "url": "https://scripstr.ru"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine",
      "Blog"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "maroon"
  ],
  "config": {
    "custom": {
      "dark_theme_logo": {
        "type": "image"
      }
    },
    "posts_per_page": 8,
    "image_sizes": {
        "xxs": {
          "width": 30
        },
        "xs": {
          "width": 100
        },
        "s": {
          "width": 300
        },
        "m": {
          "width": 600
        },
        "l": {
          "width": 1000
        },
        "xl": {
          "width": 2000
        }
    }
  }
}